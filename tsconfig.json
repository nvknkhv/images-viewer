{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    //"noImplicitAny": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}